<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutAdmin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bgLogin"
            android:layout_width="300dp"
            android:layout_height="340dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfilMainAdmin"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/purple_200"
                    tools:src="@drawable/ic_account"
                    android:layout_gravity="center_horizontal"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginHorizontal="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvNamaProfilMainAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#333333"
                        android:hint="Nama Pegawai"
                        android:inputType="textShortMessage" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginHorizontal="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvJabatanProfilMainAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#333333"
                        android:hint="Jabatan"
                        android:inputType="textShortMessage" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginHorizontal="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvNipProfilMainAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#333333"
                        android:hint="Nomor Induk Pegawai"
                        android:inputType="textShortMessage" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <TextView
                    android:id="@+id/tv"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FITUR MENU"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imvMain" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgRegistrasiMenuAdmin"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="86dp"
                        android:clickable="true"
                        android:src="@drawable/register"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRegistrasiMenuAdmin"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="132dp"
                        android:layout_marginEnd="86dp"
                        android:background="@drawable/btn_bg"
                        android:text="REGISTRASI"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imgMasterUserMenuAdmin"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="86dp"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:src="@drawable/company"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMasterUserMenuAdmin"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="86dp"
                        android:layout_marginTop="132dp"
                        android:background="@drawable/btn_bg"
                        android:text="MASTER USER"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgRiwayatMenuAdmin"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="86dp"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:src="@drawable/image_1"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRiwayatMenuAdmin"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="86dp"
                        android:layout_marginTop="132dp"
                        android:background="@drawable/btn_bg"
                        android:text="ARSIP EVIDENCE"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imgNomorPerkaraMenuAdmin"
                        android:layout_width="120dp"
                        android:layout_height="118dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="86dp"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:src="@drawable/history_book"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnNomorPerkaraMenuAdmin"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="86dp"
                        android:layout_marginTop="132dp"
                        android:background="@drawable/btn_bg"
                        android:text="NOMOR PERKARA"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgTrashMenuAdmin"
                        android:layout_width="120dp"
                        android:layout_height="118dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="86dp"
                        android:clickable="true"
                        android:src="@drawable/trash"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnTrashMenuAdmin"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="132dp"
                        android:layout_marginEnd="86dp"
                        android:background="@drawable/btn_bg"
                        android:text="RIWAYAT HAPUS"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_viewAdmin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu_admin"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>