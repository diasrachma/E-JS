<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTrash"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:contentPaddingTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <TextView
            android:id="@+id/tvIdCutiTrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="100"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvTanggalBuktiTrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="26dp"
            android:text="Tgl Kirim : 2022/02/11"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvNamaTrash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="96dp"
            android:text="Nama Pegawai"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvTanggalHapusTrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="26dp"
            android:text="Tgl Hapus : 2022/02/11 00:00:00"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <Space
        app:layout_constraintTop_toBottomOf="@+id/cardTrash"
        android:layout_width="match_parent"
        android:layout_height="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>